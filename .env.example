# ============================================
# CONFIGURACIÓN DEL PARSER DE DEVOCIONALES
# ============================================
# Copia este archivo a .env y personaliza los valores según tus necesidades

# Fuente de datos (URL de API o ruta a archivo JSON local)
# Por defecto: https://cenfolic.com/wordpress/wp-json/wp/v2/posts
# Ejemplo con archivo local: demo-json.json
DEVO_JSON_SOURCE=https://cenfolic.com/wordpress/wp-json/wp/v2/posts

# Ruta al archivo de plantilla HTML
# Por defecto: ./devocional-template_placeholders.html
DEVO_TEMPLATE_PATH=./devocional-template_placeholders.html

# Directorio donde se guardarán los archivos generados
# Por defecto: ./output
DEVO_OUTPUT_DIR=./root/devocional.info/html

# Generar imágenes PNG de los devocionales
# Valores: true | false
# Por defecto: false
# Nota: Requiere Puppeteer instalado (npm install puppeteer)
DEVO_GENERATE_IMAGES=false

# Ancho de las imágenes generadas en píxeles
# Por defecto: 1920
# El alto se ajusta automáticamente al contenido
DEVO_IMAGE_WIDTH=1920

# URL del servidor donde están alojados los archivos de audio
# Por defecto: https://cenfolic.com/audio/devo/
# Nota: Los archivos deben tener el formato: YYYY-MM-DD.mp3
DEVO_AUDIO_SERVER_URL=https://cenfolic.com/audio/devo/

# Descargar archivos de audio MP3 localmente
# Valores: true | false
# Por defecto: false
# Si está en true, descarga los MP3 al directorio de salida
# Si está en false, los HTML apuntan al servidor remoto
# Nota: Si el archivo ya existe, no se descarga nuevamente
DEVO_DOWNLOAD_AUDIO=false
